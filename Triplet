#include <bits/stdc++.h>
using namespace std;

vector<vector<int>> threeSum(vector<int>& a) {
    vector<vector<int>> result;
    int n = a.size();

    sort(a.begin(), a.end());

    for (int i = 0; i < n - 2; i++) {

        // duplicate i skip
        if (i > 0 && a[i] == a[i - 1])
            continue;

        int left = i + 1;
        int right = n - 1;
        int sum = -a[i];

        while (left < right) {

            int s = a[left] + a[right];

            if (s == sum) {
                result.push_back({a[i], a[left], a[right]});

                left++;
                right--;

                // duplicate left skip
                while (left < right && a[left] == a[left - 1])
                    left++;

                // duplicate right skip
                while (left < right && a[right] == a[right + 1])
                    right--;
            }
            else if (s < sum) {
                left++;
            }
            else {
                right--;
            }
        }
    }
    return result;
}
